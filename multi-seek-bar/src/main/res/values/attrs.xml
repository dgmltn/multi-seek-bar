<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ThumbView">
        <attr name="thumb_style" format="enum">
            <enum name="circle" value="0" />
            <enum name="pin" value="1" />
            <enum name="nothing" value="2" />
        </attr>
        <attr name="thumb_color" format="color" />
        <attr name="thumb_textColor" format="color" />
        <attr name="value" format="float" />
        <attr name="android:text" />
        <attr name="android:clickable" />
    </declare-styleable>

    <declare-styleable name="AbsMultiSeekBar">
        <attr name="style" format="enum">
            <enum name="continuous" value="0" />
            <enum name="discrete" value="1" />
        </attr>
        <attr name="max" format="integer" />
        <attr name="thumbs" format="integer" />
        <attr name="hasTicks" format="boolean" />
        <attr name="trackColor" format="color" />
        <attr name="tickColor" format="color" />
        <attr name="thumb_style" />
        <attr name="thumb_color" />
        <attr name="thumb_textColor" />
    </declare-styleable>

    <declare-styleable name="ArcSeekBar">
        <attr name="arc_start" format="integer" />
        <attr name="arc_sweep" format="integer" />
    </declare-styleable>

</resources>