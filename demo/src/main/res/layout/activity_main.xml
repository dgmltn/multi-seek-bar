<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <!-- ThumbView -->
    <com.dgmltn.slider.ThumbView
        android:id="@+id/thumb1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#20000000"
        android:scaleType="center"
        android:text="yay"
        app:thumb_style="pin"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="#10000000"
        android:padding="24dp"
        />

    <!-- basic HorizontalSlider -->
    <com.dgmltn.slider.HorizontalSlider
        android:id="@+id/hslider1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#10000000"
        android:padding="24dp"
        app:thumbs="2"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:padding="24dp"
        />

    <!-- HorizontalSlider with explicitly defined ThumbView -->
    <com.dgmltn.slider.HorizontalSlider
        android:id="@+id/hslider2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="24dp"
        >
        <com.dgmltn.slider.ThumbView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:value="50"/>
        <com.dgmltn.slider.ThumbView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:value="100"
            app:thumb_style="nothing"/>
    </com.dgmltn.slider.HorizontalSlider>

    <!-- ArcSlider -->
    <com.dgmltn.slider.ArcSlider
        android:id="@+id/slider2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        app:style="discrete"
        app:thumb_style="pin"
        />


</LinearLayout>
</ScrollView>