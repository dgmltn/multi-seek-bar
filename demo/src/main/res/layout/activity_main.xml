<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <!-- ThumbView -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#10000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="Standalone ThumbView"
                android:textSize="12sp" />

            <com.dgmltn.slider.ThumbView
                android:id="@+id/thumb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="#20000000"
                android:scaleType="center"
                android:text="yay"
                app:thumb_style="pin" />

        </android.support.v7.widget.CardView>

        <!-- basic HorizontalSlider -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#10000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="Horizontal Slider (with 2 thumbs)"
                android:textSize="12sp" />

            <com.dgmltn.slider.HorizontalSlider
                android:id="@+id/hslider1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="24dp"
                app:thumbs="2" />

        </android.support.v7.widget.CardView>

        <!-- basic HorizontalSlider (official) -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#10000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="Basic Horizontal Slider (AppCompat)"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="24dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="Basic Horizontal Slider (AppCompat)"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="24dp" />

        </android.support.v7.widget.CardView>

        <!-- HorizontalSlider with explicitly defined ThumbView -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="HorizontalSlider with explicitly defined ThumbView"
                android:textSize="12sp" />

            <com.dgmltn.slider.HorizontalSlider
                android:id="@+id/hslider2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="24dp">

                <com.dgmltn.slider.ThumbView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:value="50" />

                <com.dgmltn.slider.ThumbView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:thumb_style="nothing"
                    app:value="100" />
            </com.dgmltn.slider.HorizontalSlider>

        </android.support.v7.widget.CardView>

        <!-- ArcSlider -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="ArcSlider - discrete, hasTicks"
                android:textSize="12sp" />

            <com.dgmltn.slider.ArcSlider
                android:id="@+id/arcslider1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingBottom="24dp"
                android:paddingTop="48dp"
                app:hasTicks="true"
                app:max="20"
                app:style="discrete"
                app:thumb_style="pin" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#ccc"
                android:padding="4dp"
                android:text="ArcSlider - discrete"
                android:textSize="12sp" />

            <com.dgmltn.slider.ArcSlider
                android:id="@+id/arcslider2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingBottom="24dp"
                android:paddingTop="48dp"
                app:arc_start="180"
                app:arc_sweep="180"
                app:style="discrete"
                app:thumb_style="pin" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
